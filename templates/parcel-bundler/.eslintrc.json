{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-useless-constructor": "off",
        "space-before-function-paren": "off",
        "object-curly-spacing": "off",
        "new-cap": "off",
        "eol-last": "off",
        "semi": "off",
        "camelcase": "off",
        "no-trailing-spaces": "off",
        "indent": ["error", 4],
        "node/no-path-concat": "off",
        "import/no-webpack-loader-syntax": "off"
    }
}
