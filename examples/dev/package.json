{
  "name": "pet-space",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "dist-front/*"
    ],
    "delay": 2500
  },
  "scripts": {
    "start": "rollup -c && npm run serve",
    "serve": "sbf serve --path ./dist --port 4500",
    "bundle": "rollup -c ",
    "serve:front": "sbf serve --path ./dist --port 4500",
    "serve:front:watch": "sbf serve --path ./dist --port 4500 --watch"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^16.11.10",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.15",
    "rollup": "^2.60.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-watch": "^4.3.1",
    "simple-boot-front-cli": "^1.0.8",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "rxjs": "^6.6.7",
    "simple-boot-front": "file:../../dist"
  }
}
